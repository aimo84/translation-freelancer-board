<div data-toggle="buttons">
    <label class="btn btn-outline btn-primary {{userInfo.currency == 'cny' ? 'active' : ''}}"
           ng-click="userInfo.currency = 'CNY'">
        <input type="radio" name="currency" value="CNY" /><i class="fa fa-cny"> CNY</i>
    </label>
    &nbsp;
    <label class="btn btn-outline btn-primary {{userInfo.currency == 'usd' ? 'active' : ''}}"
           ng-click="userInfo.currency = 'USD'">
        <input type="radio" name="currency" value="USD" /><i class="fa fa-usd"> USD</i>
    </label>
</div>